<h1>Eat-Da-Burger</h1>
        <img src="/assets/img/burger.jpg">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div id="burgerstoeat">
                            <h2>Burgers</h2>
                            <ul>
                            {{#each burgers}}
                                {{#unless devoured}}
                                {{>burgers/burger-block devoured=true}}
                                {{/unless}}
                            {{/each}}
                        </ul>
                            
                    </div>
                </div>
                <div class="col-6">
                    <div id="burgersdevoured">
                        <h2>Devoured</h2>
                        <ul>
                                {{#each burgers}}
                                    {{#if devoured}}
                                        {{> burgers/burger-block devoured=false}}
                                    {{/if}}
                                {{/each}}
                            </ul>
                    </div>
                </div>
            </div>
        </div>
        <h2>Add Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <input type="text" id="ca" burger_name="burger_name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
        <h5>Add a burger that you would like to eat and then press enter</h5>